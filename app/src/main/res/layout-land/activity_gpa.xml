        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:padding="2dp"
        android:background="#0B0BC7"
        android:orientation="vertical"

        >
