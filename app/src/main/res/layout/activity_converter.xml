<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".converter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:weightSum="4"
            >
            <Button
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/basic_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="basic"
                android:textColor="#ffffff"
                android:background="#ff0000"
                />
            <Button
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/living_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="living"
                android:textColor="#ffffff"
                android:background="#000000"
                />
            <Button
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/science_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="science"
            android:textColor="#ffffff"
            android:background="#000000"
            />
            <Button
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/misc_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="misc."
            android:textColor="#ffffff"
            android:background="#000000"
            />
        </LinearLayout>

        <fragment
            android:name="com.example.project.BasicFragment"
            android:id="@+id/fragment_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </fragment>

        <fragment
            android:name="com.example.project.BasicLengthFragment"
            android:id="@+id/fragment_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </fragment>





    </LinearLayout>

</LinearLayout>