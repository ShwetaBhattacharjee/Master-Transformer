<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="@drawable/menu1"
    tools:context=".MainActivity"

    >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
   android:layout_marginTop="100dp"
    android:layout_weight="1"
    android:weightSum="2"
    >
    <Button
        android:id="@+id/calculator_button"

        android:layout_marginRight="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/calculator"
        android:textAllCaps="false"
        android:textColor="#FFEB3B"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:text="Calculators"
        android:background="@null"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/translator_button"
       android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/translation"
        android:textAllCaps="false"
        android:textColor="#FFEB3B"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Translator"
        android:background="@null"
        android:layout_weight="1"
        />

</LinearLayout>

    <Button
        android:id="@+id/converter_button"
        android:background="@null"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/convertericon"
        android:textAllCaps="false"
        android:textColor="#FFEB3B"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Unit Converter"

        android:layout_weight="1"
        />

</LinearLayout>