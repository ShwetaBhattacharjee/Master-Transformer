<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFDDDD"

    tools:context=".MiscBloodSugar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >

            <EditText
                android:id="@+id/inputtextbloodsugar"
                android:inputType="numberDecimal"
                android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="44dp"
                android:background="@drawable/shape"
                android:drawableRight="@drawable/ic_create_black_24dp"
                android:layout_marginRight="4dp"
                android:textAlignment="center"

                />
            <Spinner

                android:id="@+id/blood_spinner"
                android:layout_marginTop="1dp"
                android:background="@drawable/shadow"
                android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="42dp"
                android:spinnerMode="dialog"
                >

            </Spinner>
        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:layout_margin="2dp"
                    android:weightSum="2"
                    >
                    <TextView
                        android:id="@+id/mg_dl"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#BE0909"
                        android:text="0"
                        android:layout_marginRight="8dp"
                        />
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="#706E6E"
                        android:text="mg/dL"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="#ffffff"
                    android:layout_margin="2dp"
                    >
                    <TextView
                        android:id="@+id/mmol_l"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#BE0909"
                        android:text="0"
                        android:layout_marginRight="8dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="#706E6E"
                        android:text="mmol/L"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="#ffffff"
                    android:layout_margin="2dp"
                    >
                    <TextView
                        android:id="@+id/hb_a1c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#BE0909"
                        android:text="0"
                        android:layout_marginRight="8dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="#706E6E"
                        android:text="Hb-A1c%"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="#ffffff"
                    android:layout_margin="2dp"
                    >
                    <TextView
                        android:id="@+id/mmol_mol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#BE0909"
                        android:text="0"
                        android:layout_marginRight="8dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="#706E6E"
                        android:text="mmol/mol"
                        />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>