<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".BasicFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:weightSum="4"
            android:background="#000000"
            >
            <Button
                android:padding="3dp"
                android:id="@+id/length_button"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#FF9800"
                android:drawableTop="@drawable/lengthic"
                android:textAllCaps="false"
                android:text="Length"
                android:textColor="#ffffff"
                />
            <Button
                android:padding="5dp"
                android:id="@+id/area_button"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#A0674B"
                android:drawableTop="@drawable/area"
                android:textAllCaps="false"
                android:text="Area"
                android:textColor="#ffffff"
                />
            <Button
                android:padding="3dp"
                android:id="@+id/weight_button"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#A0674B"
                android:drawableTop="@drawable/weightic"
                android:textAllCaps="false"
                android:text="Weight"
                android:textColor="#ffffff"
                />
            <Button
                android:padding="4dp"
                android:id="@+id/volume_button"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#A0674B"
                android:drawableTop="@drawable/volumeic"
                android:textAllCaps="false"
                android:text="Volume"
                android:textColor="#ffffff"
                />


        </LinearLayout>




</FrameLayout>